{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "newLine": "LF",
  },
  "include": [
    "index.ts",
    "package.json",
  ],
  "exclude": [
    "**/*.spec.ts",
    "dist/**/*",
  ]
}
